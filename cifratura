#include <iostream>
#include <string>
#include <string.h>

using namespace std;

int main(){
int mov;
char alfabeto[26]={'a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z'};
string messaggio,parolacriptata;
cin>>messaggio;

    for(int i=0;i<messaggio.length();i++){
      for(int k=0;k<26;k++){
          if(messaggio[i]==alfabeto[k]){
            if(alfabeto[k]=='z'){
            parolacriptata[i]='c';
            break;
            }
            else if(alfabeto[k]=='y'){
            parolacriptata[i]='b';
            break;
            }
            else if(alfabeto[k]=='x'){
            parolacriptata[i]='a';
            break;
            }
            else{
            parolacriptata[i]=alfabeto[k]+3;
            }
           }
           else if(messaggio[i]==alfabeto[k]-32){
            if(alfabeto[k]=='Z'){
            parolacriptata[i]='C';
            break;
            }
            else if(alfabeto[k]=='Y'){
            parolacriptata[i]='B';
            break;
            }
            else if(alfabeto[k]=='X'){
            parolacriptata[i]='A';
            break;
            }
            else{
            parolacriptata[i]=alfabeto[k]+3;
            }
           }
        }

    }
    cout<<"la parola criptata e'"<<parolacriptata;
}
